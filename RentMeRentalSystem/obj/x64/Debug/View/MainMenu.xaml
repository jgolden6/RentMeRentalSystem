<Page
    x:Class="RentMeRentalSystem.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:RentMeRentalSystem.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="800"
    Width="600">

    <Page.DataContext>
        <viewModel:CurrentUser/>
    </Page.DataContext>

    <Grid>
        <TextBlock x:ConnectionId='2' x:Name="CurrentUsername" TextAlignment="Left" VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding Path=Username, Mode=OneWay}" TextWrapping="Wrap" Height="26" Margin="12,10,416,764" RenderTransformOrigin="0.631,0.962" />
        <TextBlock x:ConnectionId='3' x:Name="CurrentUserId" TextAlignment="Left" VerticalAlignment="Top" HorizontalAlignment="Right" Text="{Binding Path=IdNumber, Mode=OneWay}" TextWrapping="Wrap" Height="26" Margin="0,10,100,0" />
        <TextBlock x:ConnectionId='4' x:Name="CurrentUserFullName" TextAlignment="Left" VerticalAlignment="Top" HorizontalAlignment="Right" Text="{Binding Path=FullName, Mode=OneWay}" TextWrapping="Wrap" Height="26" Margin="0,10,200,0" />
        <ListView x:ConnectionId='5' x:Name="MemberListView" Margin="0,50,0,80" ItemsSource="{Binding Path=Customers, Mode=TwoWay}" IsItemClickEnabled="True"                                                   />
        <Button x:ConnectionId='6' x:Name="RegisterMemberButton" Content="Register Member" Margin="10,725,0,0" VerticalAlignment="Top"
                Height="70" Width="150"                                    />
        <Button x:ConnectionId='7' x:Name="UpdateMemberButton" Content="Update Member" Margin="0,725,0,0" VerticalAlignment="Top"
                Height="70" Width="150"                                  HorizontalAlignment="Center" />
        <Button x:ConnectionId='8' x:Name="DeleteMemberButton" Content="Delete Member" Margin="440,725,0,0" VerticalAlignment="Top"
                Height="70" Width="150"                                  />
        <Button x:ConnectionId='9' x:Name="LogoutButton" Content="Logout" Margin="520,8,0,0" VerticalAlignment="Top" Width="70"                           />
    </Grid>
</Page>

